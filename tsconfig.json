{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "build",

    "removeComments": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,

    "target": "es5"
  },
  "include": ["src/**/*.ts", "./*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
